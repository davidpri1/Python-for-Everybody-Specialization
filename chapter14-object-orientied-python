class FootballFan(PartyAnimal):  # Objective inheritance
points=0
def touchdown(self):
  self.points=self.points+7
  self.party()
print(self.name, “points”, self.points)

an=PartyAnimal()
s=PartyAnimal(‘Sally’)
s.party()
