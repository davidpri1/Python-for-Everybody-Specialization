#2
hours= int(raw_input('Enter hours:\n'))
rate = float(raw_input('Enter rate:\n'))
pay = hours * rate
print "Pay: %.2f" %pay    # round() to two decimal
#3
x=17
y=12.0
a1= x/2
print a1, type(a1)  # 8 <int>
a2 = x/2.0
print a2, type (a2) # 8.5 <float>
a3= y/3
print a3, type (a3)  #4.0 <float>

